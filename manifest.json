{
    "manifest_version": 2,
    "name": "My Extension",
    "version": "1.0",
    "description": "My extension does this and that",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [{
      "matches": ["https://example.com/*"],
      "js": ["content.js"]
    }],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title": "Click me!"
    }
  }
  